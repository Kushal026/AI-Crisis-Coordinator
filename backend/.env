# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/crisis_command_center
MONGODB_URI_ATLAS=mongodb+srv://username:password@cluster.mongodb.net/crisis_command_center

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Redis (optional - for session caching)
REDIS_URL=redis://localhost:6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# Company Subscription Tiers
FREE_TIER_MAX_USERS=5
FREE_TIER_MAX_CRISES=100
PRO_TIER_MAX_USERS=50
PRO_TIER_MAX_CRISES=1000
ENTERPRISE_TIER_MAX_USERS=999999
ENTERPRISE_TIER_MAX_CRISES=999999
